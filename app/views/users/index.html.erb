<h1>Listing users</h1>

<table class="table table-condensed">
  <thead>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @users) do |user| %>
      
      <td><%= link_to_show user %></td>
          
      <td><%= user.age %></td>
             <td><%= link_to_edit user, size: :mini %>
      <%= link_to_destroy user, size: :mini %></td>
    <% end %>
  </tbody>
</table>

